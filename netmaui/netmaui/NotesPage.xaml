<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="netmaui.NotesPage"
             Title="NotesPage">
    <VerticalStackLayout>
        <Editor 
            x:Name="EditorNotes"
            HorizontalOptions="FillAndExpand"
            Placeholder="Text..."
            />
        <Button 
            Clicked="Button_Clicked_Save"
            HorizontalOptions="Center"
            Text="Save"
            />
        <Button 
            Clicked="Button_Clicked_Delete"
            HorizontalOptions="Center"
            BackgroundColor="Red"
            Text="Delete"
            />
        <Label 
            x:Name="TextEditor"
            Text=""
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="Center"
            />
        <Button 
            x:Name="Get"
            Text="Get"
            HorizontalOptions="Center"
            Clicked="Button_Get_Clicked"
            VerticalOptions="Center"
            />
    </VerticalStackLayout>
</ContentPage>